{
    "name": "Vi-Notify",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "A simple extension to notify students of Moodle/Neo-colab assignments' last dates, in their browser itself.",
    "permissions": [
        "activeTab",
        "storage",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icons/vinotify-48-logo-new.png",
            "128": "icons/vinotify-128-logo-new.png"
        }
    }
}